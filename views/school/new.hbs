<h2>Let's add a dance lesson</h2>
<form action="/school/new" method="POST">

<div class="form-group">
  <label for="name">Name</label>
  <input class="form-control" id="name" type="text" name="name"/>
</div>
  
<div class="form-group mt-3">
<label for="level">Level</label>
  <input id="level" type="text" name="level"/>
</div>

  

  <label for="danceStyle">Dance style</label>
  <input id="danceStyle" type="text" name="danceStyle"/>

    <label for="teacher">Teacher</label>
  <input id="teacher" type="text" name="teacher"/>

    <label for="price">Price</label>
  <input id="price" type="text" name="price"/>

    <label for="hour">Hour</label>
  <input id="hour" type="text" name="hour"/>

      <label for="minute">Minute</label>
  <input id="minute" type="text" name="minute"/>

    <label for="days">Days</label>
  <input id="days" type="text" name="days"/>

  <button type="submit">Add</button>
</form>